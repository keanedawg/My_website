<h1>My Blog</h1>

<p>{{#link-to 'welcome'}} See about me{{/link-to}}</p>

{{outlet}}



{{#if session.isAuthenticated}}
<h2>New Post</h2>
<ul class="post-publish">
  <li>
    {{input value=title placeholder="Title"}}
  </li>
  <li>
    {{textarea value=body placeholder="Body"}}
  </li>
  <li>
    <button {{action "publishPost"}}>Publish</button>
  </li>
</ul>
{{/if}}

<section>
    <h2>posts here</h2>
{{#each model as |post|}}
  <div>{{post.title}}</div>
{{/each}}
</section>